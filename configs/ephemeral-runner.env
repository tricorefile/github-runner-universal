# Configuration for Ephemeral Runner
# This runner exits after completing one job (good for auto-scaling)

GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your-owner
GITHUB_REPOSITORY=your-repo
RUNNER_SCOPE=repo
RUNNER_NAME=ephemeral-runner
RUNNER_LABELS=self-hosted,linux,x64,docker,ephemeral
EPHEMERAL=true
RESTART_POLICY=on-failure
CONTAINER_NAME=ephemeral-runner