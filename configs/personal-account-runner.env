# ==========================================
# 个人账户 GitHub Runner 配置
# ==========================================
# 此配置用于个人账户下的仓库

# ==========================================
# REQUIRED CONFIGURATION
# ==========================================

# GitHub Personal Access Token
# 个人账户需要 'repo' 权限
# 创建 Token: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# GitHub 用户名（个人账户名）
GITHUB_OWNER=tricorelife-labs

# ==========================================
# RUNNER SCOPE - 仓库级别
# ==========================================

# 个人账户只能使用 repo 级别的 runner
RUNNER_SCOPE=repo

# 仓库名称（必填）
GITHUB_REPOSITORY=github-runner-universal

# ==========================================
# RUNNER CONFIGURATION
# ==========================================

# Runner 名称
RUNNER_NAME=personal-runner-1

# Runner 标签
RUNNER_LABELS=self-hosted,linux,x64,docker

# Runner 工作目录
RUNNER_WORKDIR=_work

# Runner 组
RUNNER_GROUP=default

# 临时 Runner
EPHEMERAL=false

# 禁用自动更新
DISABLE_AUTO_UPDATE=true

# ==========================================
# CONTAINER CONFIGURATION
# ==========================================

# 容器名称
CONTAINER_NAME=personal-github-runner

# Runner Docker 镜像
RUNNER_IMAGE=ghcr.io/tricorelife-labs/github-runner-universal:latest

# Runner 平台
RUNNER_PLATFORM=linux/amd64

# 重启策略
RESTART_POLICY=unless-stopped

# ==========================================
# RESOURCE LIMITS
# ==========================================

# CPU 限制
CPU_LIMIT=4
CPU_RESERVATION=1

# 内存限制
MEMORY_LIMIT=8G
MEMORY_RESERVATION=2G

# ==========================================
# VOLUME MOUNTS
# ==========================================

# 工作目录
WORK_DIR=./work

# 缓存目录
CARGO_CACHE=./cache/cargo
NPM_CACHE=./cache/npm
MAVEN_CACHE=./cache/maven
GRADLE_CACHE=./cache/gradle

# 工具目录
TOOLS_DIR=./tools

# SSH 目录
SSH_DIR=./ssh

# ==========================================
# NETWORK CONFIGURATION
# ==========================================

# Docker 网络名称
NETWORK_NAME=runner-network