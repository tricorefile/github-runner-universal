# ==========================================
# GitHub Runner Universal Configuration
# ==========================================
# Copy this file to .env and configure for your needs

# ==========================================
# REQUIRED CONFIGURATION
# ==========================================

# GitHub Personal Access Token
# Required permissions:
# - For repository runners: 'repo' scope
# - For organization runners: 'admin:org' scope  
# - For enterprise runners: 'admin:enterprise' scope
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# GitHub owner (username, organization, or enterprise name)
GITHUB_OWNER=your_github_owner

# ==========================================
# RUNNER SCOPE CONFIGURATION
# ==========================================

# Runner scope: repo, org, or enterprise
# - repo: Runner for specific repository (default)
# - org: Runner for entire organization
# - enterprise: Runner for enterprise
RUNNER_SCOPE=repo

# Repository name (ONLY required if RUNNER_SCOPE=repo)
# Leave empty for org/enterprise runners
GITHUB_REPOSITORY=your_repository_name

# ==========================================
# RUNNER CONFIGURATION
# ==========================================

# Runner name (defaults to container hostname)
RUNNER_NAME=universal-runner-1

# Runner labels (comma-separated)
# Examples:
# - For general use: self-hosted,linux,x64
# - For specific env: self-hosted,linux,x64,production
# - For specific tech: self-hosted,linux,x64,docker,node18,rust
RUNNER_LABELS=self-hosted,linux,x64,docker

# Runner work directory
RUNNER_WORKDIR=_work

# Runner group (for organization runners)
RUNNER_GROUP=default

# Ephemeral runner (exits after running one job)
# Set to true for auto-scaling scenarios
EPHEMERAL=false

# Disable runner auto-update
DISABLE_AUTO_UPDATE=true

# ==========================================
# CONTAINER CONFIGURATION
# ==========================================

# Container name
CONTAINER_NAME=github-runner-1

# Runner Docker image
# Examples:
# - Use latest: ghcr.io/tricorefile/github-runner-universal:latest
# - Use specific SHA: ghcr.io/tricorefile/github-runner-universal:sha256-30564af0d9ab44a65c46f7b176976a97f2f009d9f0167afd586022259f9536a1
# - Use specific tag: ghcr.io/tricorefile/github-runner-universal:v1.0.0
RUNNER_IMAGE=ghcr.io/tricorefile/github-runner-universal:latest

# Restart policy: always, unless-stopped, on-failure, no
RESTART_POLICY=unless-stopped

# ==========================================
# RESOURCE LIMITS
# ==========================================

# CPU limits
CPU_LIMIT=4
CPU_RESERVATION=1

# Memory limits
MEMORY_LIMIT=8G
MEMORY_RESERVATION=2G

# ==========================================
# VOLUME MOUNTS
# ==========================================

# Work directory on host
WORK_DIR=./work

# Cache directories (optional, speeds up builds)
CARGO_CACHE=./cache/cargo
NPM_CACHE=./cache/npm
MAVEN_CACHE=./cache/maven
GRADLE_CACHE=./cache/gradle

# Custom tools directory (optional)
TOOLS_DIR=./tools

# SSH directory (optional, for deployment keys)
SSH_DIR=./ssh

# ==========================================
# NETWORK CONFIGURATION
# ==========================================

# Docker network name
NETWORK_NAME=runner-network